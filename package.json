{
  "name": "clean-rest-api",
  "version": "1.1.0",
  "main": "build/server.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "dev": "nodemon --exec babel-node src/server.js",
    "dev:pm2": "pm2-dev start --interpreter babel-node src/server.js",
    "build": "yarn clean && yarn build-babel",
    "ungit": "rm -rf .git",
    "up-all": "yarn upgrade --latest",
    "start:prod": "NODE_ENV=production pm2 start ./build/server.js --name backend-prod -i max",
    "start:node": "node ./build/server.js",
    "start": "yarn start:prod"
  },
  "dependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.9",
    "@babel/runtime": "^7.13.9",
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.19.2",
    "helmet": "^4.4.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.11.18",
    "nodemailer": "^6.5.0",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/node": "^7.13.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  }
}
